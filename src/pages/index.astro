---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "SecLoop",
    description: "Autonomous security scanner & auto-fixer powered by LLM loops. Found CVE-2025-68428 in Apache Superset. Scans for CVEs, secrets, and SAST vulnerabilities with iterative auto-fix.",
    url: "https://github.com/Nancy-Chauhan/secloop",
    tags: ["Python", "Claude AI", "pip-audit", "semgrep", "gitleaks"]
  },
  {
    title: "LLM-Powered Threat Modeling",
    description: "Self-serve threat modeling platform using LLMs to analyze system designs and generate STRIDE-based security assessments with actionable remediation steps.",
    url: "https://github.com/Nancy-Chauhan/llm-powered-threat-modelling",
    tags: ["React", "TypeScript", "OpenAI", "Claude", "PostgreSQL"]
  },
  {
    title: "Info Disclosure Scanner",
    description: "AI-powered security scanner that detects sensitive information leakage in web applications using Claude AI. Checks 50+ risky paths and security headers.",
    url: "https://github.com/Nancy-Chauhan/info-disclosure-scanner",
    tags: ["Python", "Claude AI", "Security Scanner"]
  }
];

const talks = [
  {
    title: "Automate Once, Run Anywhere: The Docker Moment for Security Workflows",
    url: "https://kccnceu2026.sched.com/event/2CW1E",
    event: "KubeCon + CloudNativeCon Europe 2026",
    date: "March 25, 2026",
    location: "Amsterdam, Netherlands",
    description: "Making security automation portable, reproducible, and Kubernetes-native using open, declarative workflow definitions.",
    upcoming: true
  }
];

---

<Layout title="Nancy Chauhan | Security Engineer">
  <div class="container">
    <section class="hero">
      <div class="hero-header">
        <div class="hero-text">
          <p class="hero-subtitle">Security Engineer</p>
          <h1 class="hero-title">Breaking systems to build them better</h1>
        </div>
        <img src="/nancy.jpg" alt="Nancy Chauhan" class="hero-image" />
      </div>
      <div class="hero-description">
        <p>
          I enjoy breaking down systems to understand how they fail and using that understanding to help teams build more secure and reliable products. My background is in DevOps and cloud native systems, and over time my interests have shifted toward product security, application security, and threat modeling.
        </p>
        <p>
          I've been building depth in application security through hands-on learning, working through real-world web vulnerability classes like authentication issues, IDORs, injections, business logic flaws, and OWASP Top 10 risks. I reason about vulnerabilities from an attacker's perspective while keeping mitigations practical and developer-friendly.
        </p>
        <p>
          More recently, I've been exploring how AI can support security work, especially in accelerating manual processes like threat modeling and design reviews, while keeping humans in the loop for judgment and accountability.
        </p>
        <p>
          I also created video courses on AWS and cloud development for LocalStack Academy.
        </p>
      </div>
      <div class="hero-cta">
        <a href="https://cal.com/nancychauhan" target="_blank" rel="noopener" class="btn-primary">Hire me</a>
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Featured Projects</h2>
      <div class="project-grid">
        {projects.map((project) => (
          <article class="project-card">
            <h3 class="project-title">
              <a href={project.url} target="_blank" rel="noopener">
                {project.title}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
              </a>
            </h3>
            <p class="project-description">{project.description}</p>
            <div class="project-tags">
              {project.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
      <div class="also-created">
        <span class="also-label">Also created</span>
        <a href="/videos#localstack" class="also-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="color: #ff0000;">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          <span>LocalStack Academy</span>
          <span class="also-desc">AWS cloud development courses</span>
        </a>
      </div>
      <p style="margin-top: 1.5rem;">
        <a href="/projects" class="link-arrow">View all projects</a>
      </p>
    </section>

    <section class="section">
      <h2 class="section-title">Speaking</h2>
      {talks.map((talk) => (
        <article class="project-card">
          <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 0.5rem;">
            <h3 class="project-title" style="margin-bottom: 0;">
              <a href={talk.url} target="_blank" rel="noopener">
                {talk.title}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
              </a>
            </h3>
            {talk.upcoming && <span class="tag" style="background: rgba(34, 197, 94, 0.2);">Upcoming</span>}
          </div>
          <p style="font-family: var(--font-mono); font-size: 0.8rem; color: var(--text-muted); margin: 0.5rem 0;">
            {talk.event} · {talk.date} · {talk.location}
          </p>
          <p class="project-description">{talk.description}</p>
        </article>
      ))}
      <p style="margin-top: 1.5rem;">
        <a href="/videos" class="link-arrow">Watch past talks</a>
      </p>
    </section>

  </div>
</Layout>
