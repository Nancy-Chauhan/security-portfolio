---
import Layout from '../layouts/Layout.astro';

const talks = [
  {
    title: "Conference Talk",
    description: "Security and DevOps presentation",
    youtubeId: "IE0hzdFkJYc",
    type: "youtube"
  },
  {
    title: "Tech Talk",
    description: "Technical presentation on security topics",
    youtubeId: "P9EaHSxIXe8",
    type: "youtube"
  },
  {
    title: "Talk",
    description: "Conference presentation",
    youtubeId: "mndwket9HBI",
    type: "youtube"
  }
];

const playlists = [
  {
    title: "LocalStack 101",
    description: "Beginner onboarding to LocalStack fundamentals. Learn to emulate AWS services locally—S3, Lambda, DynamoDB, and more—for faster cloud development.",
    playlistId: "PLTew28KOwGxPqbkFiW518eeIfiV495bm0",
    tags: ["AWS", "LocalStack", "Cloud Development"]
  },
  {
    title: "Development & Deployment with LocalStack",
    description: "Intermediate workflows for cloud-native apps. Full dev cycles, CI/CD integration, and testing patterns using LocalStack to simulate AWS locally.",
    playlistId: "PLTew28KOwGxPdtdW00WNXZLZnstvRQyTF",
    tags: ["DevOps", "CI/CD", "AWS"]
  }
];
---

<Layout title="Videos | Nancy Chauhan">
  <div class="container">
    <header class="page-header">
      <h1 class="page-title">Videos</h1>
      <p class="page-subtitle">Conference talks, tutorials, and walkthroughs</p>
    </header>

    <section>
      <h2 class="section-title">Talks</h2>
      <div class="video-grid">
        {talks.map((video) => (
          <article class="video-card">
            <div class="video-embed">
              <iframe
                src={`https://www.youtube.com/embed/${video.youtubeId}`}
                title={video.title}
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              />
            </div>
            <div class="video-info">
              <h3 class="video-title">{video.title}</h3>
              <p class="video-description">{video.description}</p>
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="section" id="localstack">
      <h2 class="section-title">LocalStack Academy</h2>
      <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">Video courses I created for cloud engineers to learn AWS development with LocalStack.</p>
      <div class="project-grid">
        {playlists.map((playlist) => (
          <article class="project-card">
            <h3 class="project-title">
              <a href={`https://www.youtube.com/playlist?list=${playlist.playlistId}`} target="_blank" rel="noopener">
                {playlist.title}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
              </a>
            </h3>
            <p class="project-description">{playlist.description}</p>
            <div class="project-tags">
              {playlist.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Upcoming Talk</h2>
      <article class="project-card">
        <h3 class="project-title">
          <a href="https://kccnceu2026.sched.com/event/2CW1E" target="_blank" rel="noopener">
            Automate Once, Run Anywhere: The Docker Moment for Security Workflows
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        </h3>
        <p style="font-family: var(--font-mono); font-size: 0.8rem; color: var(--text-muted); margin: 0.5rem 0;">
          KubeCon + CloudNativeCon Europe 2026 · March 25, 2026 · Amsterdam
        </p>
        <p class="project-description">
          Making security automation portable, reproducible, and Kubernetes-native using open, declarative workflow definitions.
        </p>
        <div class="project-tags">
          <span class="tag">Kubernetes</span>
          <span class="tag">Security Automation</span>
          <span class="tag">Cloud Native</span>
        </div>
      </article>
    </section>
  </div>
</Layout>

<style>
  .video-grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .video-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
